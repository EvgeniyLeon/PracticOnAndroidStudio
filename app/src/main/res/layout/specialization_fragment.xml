<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/RecyclerViewLight"
    tools:context=".SpecializationFragment">

    <TextView
        android:id="@+id/textViewSpecializationFragmentDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        style="@style/MyTextView"
        android:text="Описание:"
        app:layout_constraintStart_toStartOf="@+id/textViewSpecializationFragmentCode"
        app:layout_constraintTop_toBottomOf="@+id/textViewSpecializationFragmentCode" />

    <TextView
        android:id="@+id/textViewSpecializationFragmentCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        style="@style/MyTextView"
        android:text="Код:"
        app:layout_constraintStart_toStartOf="@+id/textViewSpecializationFragmentName"
        app:layout_constraintTop_toBottomOf="@+id/textViewSpecializationFragmentName" />

    <TextView
        android:id="@+id/textViewSpecializationFragmentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        style="@style/MyTextView"
        android:text="Название:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>